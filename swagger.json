{
    "swagger": "2.0",
    "info": {
        "title": "Game Demo Backend",
        "contact": {
            "name": "Nkubito Pacis",
            "email": "pacisnkubito@gmail.com"
        },
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "USER OPERATIONS",
            "description": "Operations on users"
        }
    ],
    "security": [
        {
            "Bearer": []
        }
    ],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "auth-token",
            "in": "header",
            "bearerFormat": "JWT",
            "scheme": "bearer"
        }
    },
    "paths": {
        "/users/login": {
            "post": {
                "tags": [
                    "USER OPERATIONS"
                ],
                "summary": "Login",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "type": "object",
                        "consumes": "application/json",
                        "properties": {
                            "email": {
                                "type": "string",
                                "required": "true"
                            },
                            "password": {
                                "type": "string",
                                "required": "true"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Invalid data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/users/register": {
            "post": {
                "tags": [
                    "USER OPERATIONS"
                ],
                "summary": "Login",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "type": "object",
                        "consumes": "application/json",
                        "properties": {
                            "names":{
                                "type": "string",
                                "required": "true"
                            },
                            "email": {
                                "type": "string",
                                "required": "true"
                            },
                            "password": {
                                "type": "string",
                                "required": "true"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Invalid data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/users/profile": {
            "get": {
                "tags": [
                    "USER OPERATIONS"
                ],
                "summary": "Get user profile",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Invalid data"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}